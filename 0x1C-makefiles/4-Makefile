NAME = school
CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
RM = rm -f

.PHONY: all clean fclean oclean re

all: $(NAME)

$(NAME): $(OBJ)
	@$(CC) $(OBJ) -o $(NAME)

%.o: %.c
	@$(CC) $(CFLAGS) -c $< -o $@

clean:
	@$(RM) *~ \#*\# $(NAME)

oclean:
	@$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
